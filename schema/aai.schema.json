{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aai-protocol.org/schemas/aai.schema.json",
  "title": "AAI Descriptor",
  "description": "Platform-agnostic descriptor for Agent App Interface",
  "type": "object",
  "required": ["schema_version", "app", "tools"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0",
      "description": "Descriptor schema version"
    },
    "app": {
      "type": "object",
      "required": ["id", "name", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(\\.[a-z0-9]+)+$",
          "description": "Unique app identifier in reverse-DNS format"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable app name"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "description": "Brief app description"
        },
        "version": {
          "type": "string",
          "description": "App version"
        }
      }
    },
    "execution": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ipc", "http"],
          "description": "Execution type"
        },
        "base_url": {
          "type": "string",
          "format": "uri",
          "description": "Base URL for HTTP execution"
        },
        "default_headers": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Default headers for HTTP requests"
        }
      }
    },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description", "parameters"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$",
            "description": "Tool name in snake_case"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Tool description"
          },
          "execution": {
            "type": "object",
            "description": "Tool-specific execution config",
            "properties": {
              "path": {
                "type": "string",
                "description": "URL path (appended to base_url)"
              },
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"],
                "description": "HTTP method"
              },
              "headers": {
                "type": "object",
                "additionalProperties": { "type": "string" },
                "description": "Additional headers for this tool"
              },
              "body_template": {
                "type": "object",
                "description": "Request body template with ${param} placeholders"
              }
            }
          },
          "parameters": {
            "$ref": "#/definitions/JSONSchema",
            "description": "JSON Schema for tool parameters"
          },
          "returns": {
            "$ref": "#/definitions/JSONSchema",
            "description": "JSON Schema for return value"
          }
        }
      }
    },
    "auth": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["oauth2", "api_key", "none"],
          "default": "none"
        },
        "oauth2": {
          "type": "object",
          "required": ["authorization_endpoint", "token_endpoint", "scopes"],
          "properties": {
            "flow": {
              "type": "string",
              "enum": ["authorization_code"],
              "default": "authorization_code"
            },
            "authorization_endpoint": { "type": "string", "format": "uri" },
            "token_endpoint": { "type": "string", "format": "uri" },
            "scopes": {
              "type": "array",
              "items": { "type": "string" }
            },
            "pkce": {
              "type": "object",
              "properties": {
                "method": {
                  "type": "string",
                  "enum": ["S256", "plain"],
                  "default": "S256"
                }
              }
            }
          }
        },
        "api_key": {
          "type": "object",
          "required": ["placement", "name", "env_var"],
          "properties": {
            "placement": {
              "type": "string",
              "enum": ["header", "query"]
            },
            "name": { "type": "string" },
            "env_var": { "type": "string" }
          }
        }
      }
    }
  },
  "definitions": {
    "JSONSchema": {
      "type": "object",
      "description": "JSON Schema Draft-07",
      "properties": {
        "type": { "type": "string" },
        "properties": { "type": "object" },
        "required": { "type": "array", "items": { "type": "string" } },
        "items": { "$ref": "#/definitions/JSONSchema" },
        "description": { "type": "string" },
        "default": {},
        "enum": { "type": "array" },
        "format": { "type": "string" },
        "minimum": { "type": "number" },
        "maximum": { "type": "number" },
        "minLength": { "type": "integer" },
        "maxLength": { "type": "integer" },
        "pattern": { "type": "string" },
        "$ref": { "type": "string" }
      }
    }
  }
}