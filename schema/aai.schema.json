{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aai-protocol.org/schemas/aai.schema.json",
  "title": "AAI Descriptor",
  "description": "Descriptor for Agent App Interface",
  "type": "object",
  "required": ["schema_version", "platform", "app", "tools"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0",
      "description": "Descriptor schema version"
    },
    "platform": {
      "type": "string",
      "enum": ["desktop", "web"],
      "description": "Target platform"
    },
    "app": {
      "type": "object",
      "required": ["id", "name", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(\\.[a-z0-9]+)+$",
          "description": "Reverse-DNS identifier"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable name"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "description": "Brief description"
        },
        "version": {
          "type": "string",
          "description": "App version"
        }
      }
    },
    "execution": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ipc", "http"],
          "description": "Execution type"
        },
        "base_url": {
          "type": "string",
          "format": "uri",
          "description": "Base URL (http/https)"
        },
        "default_headers": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Default headers"
        }
      }
    },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description", "parameters"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$",
            "description": "Tool name (snake_case)"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Tool description"
          },
          "parameters": {
            "$ref": "#/definitions/JSONSchema",
            "description": "JSON Schema for parameters"
          },
          "returns": {
            "$ref": "#/definitions/JSONSchema",
            "description": "JSON Schema for return value"
          },
          "execution": {
            "type": "object",
            "description": "Tool-specific execution (HTTP only)",
            "properties": {
              "path": {
                "type": "string",
                "description": "URL path"
              },
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"],
                "description": "HTTP method"
              },
              "headers": {
                "type": "object",
                "additionalProperties": { "type": "string" },
                "description": "Additional headers"
              }
            }
          }
        }
      }
    },
    "auth": {
      "type": "object",
      "description": "OAuth 2.1 configuration (see Security Model)",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["oauth2", "none"],
          "default": "none"
        },
        "oauth2": {
          "type": "object",
          "required": ["authorization_endpoint", "token_endpoint", "scopes"],
          "properties": {
            "authorization_endpoint": { "type": "string", "format": "uri" },
            "token_endpoint": { "type": "string", "format": "uri" },
            "scopes": {
              "type": "array",
              "items": { "type": "string" }
            },
            "pkce": {
              "type": "object",
              "properties": {
                "method": {
                  "type": "string",
                  "enum": ["S256", "plain"],
                  "default": "S256"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "JSONSchema": {
      "type": "object",
      "description": "JSON Schema Draft-07",
      "properties": {
        "type": { "type": "string" },
        "properties": { "type": "object" },
        "required": { "type": "array", "items": { "type": "string" } },
        "items": { "$ref": "#/definitions/JSONSchema" },
        "description": { "type": "string" },
        "default": {},
        "enum": { "type": "array" },
        "format": { "type": "string" },
        "minimum": { "type": "number" },
        "maximum": { "type": "number" },
        "minLength": { "type": "integer" },
        "maxLength": { "type": "integer" },
        "pattern": { "type": "string" },
        "$ref": { "type": "string" }
      }
    }
  }
}